<script>
    $('.input-area textarea').autogrow({
        vertical: true,
        horizontal: false
    });

    $('div[data_label=task_notes] .input-area textarea').keydown((e) => {
        if (e.ctrlKey && e.keyCode === 16) {
            WindowManager.get('.notes').addElement({
                tag: 'DIV',
                class: 'note',
                text: $('div[data_label=task_notes] .input-area textarea').val().split('\n').join('<br />')
            });
        }
    });
</script>